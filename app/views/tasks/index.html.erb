<h1>Tasks</h1>


	<% @tasks.each do |t| %>
		<li> 
			<td> <%= link_to t.title, [@user, t] %>-- <%=t.urgency %> | </td>
			<td> <%= link_to 'Edit', edit_user_task_path([@user, t]) %> | </td>
			<td> <%=link_to 'Delete', [@user, t], method: :delete, :confirm => "Are you sure?" %></td>
		</li>
	<% end %>

