<h1> Tasks for <%= @user.name %> </h1>

<% @tasks.each do |t| %>
	<ul>
		<li> <%= link_to t.title, [@user, t] %> --- <%= t.urgency %> </li>
	</ul>
<% end %>

<ul>
	<li> <%= link_to 'New Task', new_user_task_path(@user) %></li> 
	<li> <%= link_to "Edit This User", edit_user_path(@user) %></li> 
	<li> <%= link_to 'All Users', users_path %> </li> 
</ul>